<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="733dp"
        android:layout_height="412dp"
        android:layout_marginTop="1dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/layout_guide" />

    <TextView
        android:id="@+id/mons_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="360dp"
        android:text="MonsName"
        app:layout_constraintEnd_toStartOf="@+id/Mons"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mons_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:text="MonsHp"
        app:layout_constraintStart_toEndOf="@+id/mons_name"
        app:layout_constraintTop_toTopOf="@+id/mons_name" />

    <TextView
        android:id="@+id/mons_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="MonsMana"
        app:layout_constraintStart_toStartOf="@+id/mons_hp"
        app:layout_constraintTop_toBottomOf="@+id/mons_hp" />

    <TextView
        android:id="@+id/mons_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Monslvl"
        app:layout_constraintStart_toStartOf="@+id/mons_name"
        app:layout_constraintTop_toBottomOf="@+id/mons_name" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginBottom="185dp"
        android:text="HeroName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Hero" />

    <TextView
        android:id="@+id/hero_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HeroHp"
        tools:layout_editor_absoluteX="608dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/hero_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HeroMana"
        tools:layout_editor_absoluteX="608dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/hero_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herolvl"
        app:layout_constraintStart_toStartOf="@+id/hero_name"
        tools:layout_editor_absoluteY="251dp" />

    <TextView
        android:id="@+id/skill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill1"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/skill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill2"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="315dp" />

    <TextView
        android:id="@+id/skill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill3"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="360dp" />

    <TextView
        android:id="@+id/skill4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skill4"
        tools:layout_editor_absoluteX="271dp"
        tools:layout_editor_absoluteY="360dp" />

    <ImageView
        android:id="@+id/Hero"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/charizard" />

    <ImageView
        android:id="@+id/Mons"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arceus" />

    <Button
        android:id="@+id/BtnNormAtk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeholder"
        tools:layout_editor_absoluteX="583dp"
        tools:layout_editor_absoluteY="323dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="335dp"
        tools:layout_editor_absoluteY="223dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
