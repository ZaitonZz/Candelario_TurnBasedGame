<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".View.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="733dp"
        android:layout_height="412dp"
        android:layout_marginTop="1dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/layout_guide" />

    <TextView
        android:id="@+id/mons_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="360dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/Mons"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mons_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="@color/hpdefault"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/mons_name"
        app:layout_constraintTop_toTopOf="@+id/mons_name" />

    <TextView
        android:id="@+id/mons_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="@color/manadefault"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/mons_hp"
        app:layout_constraintTop_toTopOf="@+id/mons_lvl" />

    <TextView
        android:id="@+id/mons_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/mons_name"
        app:layout_constraintTop_toBottomOf="@+id/mons_name" />

    <TextView
        android:id="@+id/hero_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="206dp"
        android:layout_marginBottom="185dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Hero" />

    <TextView
        android:id="@+id/hero_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="@color/hpdefault"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/hero_name"
        app:layout_constraintTop_toTopOf="@+id/hero_name" />

    <TextView
        android:id="@+id/hero_mana"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="@color/manadefault"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/hero_hp"
        app:layout_constraintTop_toTopOf="@+id/hero_lvl" />

    <TextView
        android:id="@+id/hero_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/hero_name"
        app:layout_constraintTop_toBottomOf="@+id/hero_name" />

    <ImageView
        android:id="@+id/Hero"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="124dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/charizard" />

    <ImageView
        android:id="@+id/Mons"
        android:layout_width="142dp"
        android:layout_height="142dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arceus" />

    <Button
        android:id="@+id/btnNormAtk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.928"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <ImageButton
        android:id="@+id/skill1"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="57dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/whiteegg" />

    <ImageButton
        android:id="@+id/skill2"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginStart="142dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toEndOf="@+id/skill1"
        app:layout_constraintTop_toTopOf="@+id/skill1"
        app:srcCompat="@drawable/whiteegg" />

    <ImageButton
        android:id="@+id/skill3"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/skill1"
        app:layout_constraintTop_toBottomOf="@+id/skill1"
        app:srcCompat="@drawable/whiteegg" />

    <ImageButton
        android:id="@+id/skill4"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="@+id/skill2"
        app:layout_constraintTop_toTopOf="@+id/skill3"
        app:srcCompat="@drawable/whiteegg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="Stuns Enemy for\n2 turns"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/skill1"
        app:layout_constraintStart_toEndOf="@+id/skill1"
        app:layout_constraintTop_toTopOf="@+id/skill1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="Deals 10 DMG\nand applies burn"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/skill3"
        app:layout_constraintStart_toEndOf="@+id/skill3"
        app:layout_constraintTop_toTopOf="@+id/skill3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="Deals 30 DMG \nand applies burn"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/skill2"
        app:layout_constraintStart_toEndOf="@+id/skill2"
        app:layout_constraintTop_toTopOf="@+id/skill2"
        app:layout_constraintVertical_bias="0.538" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="Restores full HP \nrests for 4 turns"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/skill4"
        app:layout_constraintStart_toEndOf="@+id/skill4"
        app:layout_constraintTop_toTopOf="@+id/skill4" />

    <TextView
        android:id="@+id/combat_log"
        android:layout_width="207dp"
        android:layout_height="54dp"
        android:fontFamily="@font/pokemon_fire_red"
        android:text="@string/placeholder"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.406" />

</androidx.constraintlayout.widget.ConstraintLayout>
